﻿@model List<Portfolio.Models.SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Sosyal Medya Yönetimi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Sosyal Medya</th>
        <th>Icon</th>
        <th>Url</th>
        <th>Durum</th>
        <th>Değiştir</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SocialMediaId</td>
            <td>@item.Title</td>
            <td>@item.Icon</td>
            <td>@item.Url</td>
            <td>@item.Status</td>
            @if (item.Status == false)
            {
                <td><a href="/SocialMedia/StatusChangeToTrue/@item.SocialMediaId" class="btn btn-info">Aktif Olarak İşaretle</a></td>
            }
            else
            {
                <td><a href="/SocialMedia/StatusChangeToFalse/@item.SocialMediaId" class="btn btn-warning">Pasif Olarak İşaretle</a></td>
            }

 
            <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-success">Düzenle</a></td>
        </tr>
    }
</table>

<a href="/SocialMedia/CreateSocialMedia/" class="btn btn-info">Ekle</a>